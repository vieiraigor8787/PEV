@{
                @model List<tb_endereco>;
                ViewData["Title"] = "Endereços";
}
<hr />
<div class="row">
    <div class="col-md-10"><h4 class="font-weight-bold">Lista de Endereços</h4></div>
</div>
<hr />
<div class="card bg-white rounded" style="margin-bottom:1em">
    @if (Model.Count > 0)
    {
    <table class="table table-striped table-sm" style="margin-bottom: 0">
        <thead class="thead-dark">
            <tr>
                <th>Descrição</th>
                <th>Cep</th>
                <th>Cidade</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>UF</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descricao</td>
                    <td>@item.Cep</td>
                    <td>@item.Cidade</td>
                    <td>@item.Numero</td>
                    <td>@item.Bairro</td>
                    <td>@item.UF</td>
                    <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/menu/EditarEnd?CodigoEnd=@item.CodigoEndereco'"><i class="fa fa-edit"></i></button></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/menu/DesativarEndereco?CodigoEnd=@item.CodigoEndereco'"><i class="fa fa-trash"></i></button></td>


                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
<div class="alert alert-primary" role="alert">
    Sem Registros!
</div>
    }

            
</div>
<button type="button" class="btn btn-info btn-sm" onclick="window.location.href='../menu/Editassenha'">Voltar</button>



