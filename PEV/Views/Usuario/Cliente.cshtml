@{
                @model List<tb_login>;
                ViewData["Title"] = "Clientes";

                Layout = "_Layout_dashboard"; }

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lista de Clientes</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>CPF</th>
                                    <th>Ativo</th>
                                    <th>Editar</th>
                                    <th>Nova Senha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                    @foreach (var item in Model)
                    {
                                <tr>
                                    <td>@item.CodigoLogin</td>
                                    <td>@item.Nome</td>
                                    <td>@item.Email</td>
                                    <td>@item.Telefone</td>
                                    <td>@item.CPF_CNPJ</td>
                                    <td>@item.Ativo</td>
                                    <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/usuario/EditarSemSenhaCliente?CodigoLogin=@item.CodigoLogin&Nome=@item.Nome&Email=@item.Email&Telefone=@item.Telefone&CPF_CNPJ=@item.CPF_CNPJ&Senha=@item.Senha&Tipo=@item.Tipo&Ativo=@item.Ativo'"><i class="fa fa-edit"></i></button></td>
                                    <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/usuario/EditarSenhaCliente?CodigoLogin=@item.CodigoLogin'"><i class="fa fa-key"></i></button></td>
                                </tr>
} }
                else
                {
    <tr>
        <td>Sem Registros</td>
    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
