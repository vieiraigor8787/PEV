

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECCE</title>
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-4.2.1-dist/css/bootstrap.css?v=2.0" rel="stylesheet" type="text/css">
    <link href="~/lib/bootstrap-ecommerce-uikit/css/responsive.css" rel="stylesheet" type="text/css">
    <link href="~/lib/bootstrap-ecommerce-uikit/ui-ecommerce/fonts/fontawesome/css/all.min.css?v2.0" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/nav.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap-ecommerce-uikit/css/ui.css" rel="stylesheet" type="text/css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-notify-master/bootstrap-notify.js"></script>

</head>
<style>
    .row {
        margin: 0
    }

    .output {
        display: block;
        width: 100%
    }

    .section-content {
        border-top: 7px solid #eee
    }

    .card-product-list:last-child {
        margin-bottom: 0 !important
    }

    .section-content .padding-y {
        padding-top: 60px !important;
        padding-bottom: 60px !important;
    }

    .section-header, .section-footer {
        box-shadow: 0 2px 10px rgba(51, 51, 51, 0.1);
        position: relative;
    }

    * {
        margin: 0;
        padding: 0;
    }

    html, body {
        height: 100%;
    }

    .geral {
        min-height: 100%;
        position: relative;
        width: 100%;
    }

    footer {
        position: absolute;
        bottom: 0;
        width: 100%;
    }

    .collapse:not(.show) {
        display: block !important
    }

    .navbar-toggler {
        display: none
    }

    .navbar-nav {
        text-align: center
    }
</style>


<body style="background-color: honeydew">
    <div class="geral">
        <header class="section-header" style="background-color: #fff; margin-bottom: 1em">
            <section class="header-main border-bottom">
                <div class="container">
                    <div class="row align-items-center d-flex justify-content-around">
                        @*<div>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/sua_logo_aqui.jpg" style="width:150px" alt="">
            </a>
        </div>*@
                        <vc:logo></vc:logo>
                        <vc:busca></vc:busca>
                        <div class="">
                            <div class="widgets-wrap d-flex justify-content-end">
                                <div class="widget-header">
                                    <a class="icontext mr-2" asp-area="" asp-controller="Home" asp-action="Carrinho">
                                        <div class="icon"><i class="fa fa-lg fa-shopping-cart"></i></div>
                                        <div class="text">

                                            @{
                                                if (Convert.ToInt32(ViewData["TotalCarrinho"].ToString()) > 0)
                                                {
                                                    <span>Meu carrinho <span class="badge badge-secondary" id="dvTCar">@ViewData["TotalCarrinho"].ToString()</span></span>
                                                }
                                                else
                                                {
                                                    <span>Meu carrinho <span class="badge badge-secondary" id="dvTCar" style="display:none;"></span></span>
                                                }
                                            }

                                        </div>
                                    </a>

                                </div>

                                @if (ViewData["NomeLogin"] == "")
                                {
                                    <a class="icontext mr-2" asp-area="" asp-controller="Usuario" asp-action="CadastroCliente">
                                        <div class="icon"><i class="fa fa-lg fa-sign-in-alt"></i></div>
                                        <div class="text">
                                            <span>Registrar-se</span>
                                        </div>
                                    </a>
                                    <a class="icontext" asp-area="" asp-controller="Login" asp-action="Index">
                                        <div class="icon"><i class="fa fa-lg fa-user-circle"></i></div>
                                        <div class="text">
                                            <span>Login</span>
                                        </div>
                                    </a>
                                }

                                else
                                {
                                    <div class="widget-header dropdown">
                                        <a href="#" class="ml-3 icontext" data-toggle="dropdown" data-offset="20,10" aria-expanded="false">
                                            <div class="icon"><i class="fa fa-lg fa-user-circle"></i></div>
                                            <div class="text">
                                                <span> Suas informações &nbsp;<i class="fa fa-caret-down"></i></span>
                                            </div>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(140px, 46px, 0px);">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Olá, <span class="name-user">@ViewData["NomeLogin"]</span></a>
                                            <hr class="dropdown-divider">
                                            <a class="dropdown-item" asp-area="" asp-controller="Menu" asp-action="MeusPedidos">Meus pedidos</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="Menu" asp-action="EditaSSenha">Meus dados</a>
                                            <a class="dropdown-item icontext" asp-area="" asp-controller="Login" asp-action="Logout">
                                                <div class="icon"><i class="fa fa-lg fa-sign-out-alt"></i></div>
                                                <div class="text">
                                                    <span>Sair</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <nav class="navbar navbar-expand-lg navbar-main border-bottom">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav7" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <vc:todas-categorias></vc:todas-categorias>
                    <div class="collapse navbar-collapse" id="main_nav7">
                        <ul class="navbar-nav">
                            @*<li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Todos</a>
                            </li>*@
                            @*<li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Masculino">Masculino</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Feminino">Feminino</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Infantil">Infantil</a>
                            </li>*@
                            <vc:subcategorias></vc:subcategorias>
                            @if (ViewData["Tipo"].ToString() == "A")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="DashBoard" asp-action="Home">Dahsboard</a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="section-footer border-top" style="background-color:#fff;padding-bottom:1px;">
            <div class="container">
                <section class="footer-top" style="padding-top:1em">
                    <div class="row">
                        <aside class="col-md-3">
                            <article class="mr-3">
                                <vc:logo></vc:logo>
                                @*<img src="~/img/sua_logo_aqui.jpg" style="width:150px" class="logo-footer">
                                <p class="mt-3"></p>*@
                            </article>
                        </aside>
                        <aside class="col-sm-4 col-md-3">
                            <h6 class="title">Sobre nós</h6>
                            <ul class="list-unstyled">
                                <li><a asp-area="" asp-controller="Estatico" asp-action="Historia">História</a></li>
                                <li><a asp-area="" asp-controller="Estatico" asp-action="Termo">Termos e Compromissos</a></li>
                            </ul>
                        </aside>
                        <aside class="col-sm-4 col-md-3">
                            <h6 class="title">Contato</h6>
                            <ul class="list-unstyled">
                                <li> <a href="#">Telefone: (11) 3400-1200</a></li>
                                <li> <a href="#">Whatsap: (11)99991-0021</a></li>

                            </ul>
                        </aside>
                        <aside class="col-sm-4  col-md-3">
                            <span style="font-size:.8rem; font-weight:700">Horário de atendimento: <br>  segunda à sexta das 8h às 18h</span>
                        </aside>

                    </div> <!-- row.// -->
                </section>	<!-- footer-top.// -->

                <section class="footer-copyright border-top">
                    <p target="_blank" class="float-right text-muted">
                        <a asp-area="" asp-controller="Estatico" asp-action="Politica">Políticas de Privacidade</a> &nbsp;   &nbsp;
                    </p>
                    <p class="text-muted"> Desenvolvido por © EscolhaVirtual  </p>

                </section>
            </div><!-- //container -->
        </footer>

        @RenderSection("Scripts", required: false)
    </div>
</body>


</html>

<script>
    $(() => {
        $("#btentrar").click(function () {
            $(this).hide();
            $(".clsReg").hide();
            $(".clsErro").hide();
            $("#loadin").html("<div class='alert alert-light text-center' role='alert'><img src='./img/loading.gif' /> Aguarde...</div>");
        });
    });
</script>
