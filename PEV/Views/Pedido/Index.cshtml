@{
                @model List<TodosPedidos>;
                ViewData["Title"] = "Pedidos";

                Layout = "_Layout_dashboard"; }
<div class="content mt-3">
<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Lista de Vendas</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Venda</th>
                                <th>Cliente</th>
                                <th>Valor</th>
                                <th>Data</th>
                                <th>Status</th>
                                <th>Editar Status</th>
                                <th>Ver Itens</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                @foreach (var item in Model)
                {
            <tr>
                <td>@item.CodigoVenda</td>
                <td>@item.Nome</td>
                <td>@item.Valor.ToString("C")</td>
                <td>@item.Data</td>
                <td>@item.Status</td>
                <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/pedido/Editar?CodigoVenda=@item.CodigoVenda'"><i class="fa fa-edit "></i></button></td>
                <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/pedido/VerItens?CodigoVenda=@item.CodigoVenda'"><i class="fa fa-search"></i></button></td>
            </tr>
} }
            else
            {
            <tr>
                <td>Sem Registros</td>
            </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->
</div><!-- .content -->
