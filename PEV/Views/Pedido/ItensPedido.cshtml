@{
                @model List<ItensVenda>;
                ViewData["Title"] = "Itens da Compra";

                Layout = "_Layout_dashboard"; }
<hr />
<h4 class="font-weight-bold">Lista de Itens da Venda</h4>
<hr />
<div>

    @if (Model.Count > 0)
    {
<table class="table table-striped table-sm">
    <thead class="thead-dark">
        <tr>
            <th></th>
            <th>Venda</th>
            <th>Código do Produto</th>
            <th>Produto</th>
            <th>Tamanho</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td></td>
    <td>@item.CodigoVenda</td>
    <td>@item.CodigoInterno</td>
    <td>@item.Nome</td>
    <td>@item.Tamanho</td>
    <td>@item.Quantidade</td>
    <td>@item.Valor.ToString("C")</td>
    <td>@item.Data</td>
</tr>}
    </tbody>
</table> }
else
{
<div class="alert alert-primary" role="alert">
    Sem Registros!
</div>}

    <button type="button" class="btn btn-info btn-sm" onclick="window.location.href='/pedido'">Voltar</button>

</div>




