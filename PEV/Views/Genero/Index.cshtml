@{
                @model List<tb_genero>;
                ViewData["Title"] = "Gênero";

                Layout = "_Layout_dashboard"; }

<hr />


<hr />

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <div class="col-md-10"><strong class="card-title">Lista de Gêneros</strong></div>
                        <div class=" col-md-2"><button class="btn btn-primary" type="button" onclick="window.location.href ='/genero/cadastrogenero'">Novo Gênero</button></div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.CodigoGenero</td>
                    <td>@item.Descricao</td>
                    <td><button type="button" class="btn btn-warning btn-sm" onclick="window.location.href='/genero/editar?CodigoGenero=@item.CodigoGenero&Descricao=@item.Descricao'"><i class="fa fa-edit"></i></button></td>
                    @*<td><button type="button" class="btn btn-danger btn-sm" onclick="window.location.href='/genero/excluir?CodigoGenero=@item.CodigoGenero'"><i class="fa fa-trash"></i></button></td>*@

                </tr>} }
                else
                {
                <tr>
                    <td>Sem Registros</td>
                </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
