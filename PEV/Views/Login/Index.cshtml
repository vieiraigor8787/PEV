
@{
    @model LoginAcesso;
    ViewData["Title"] = "Login"; }


@Html.Raw(ViewData["Valida"])


<div class="login-form" style="margin-top:150px">
    <form asp-action="Logar">
        <h2 class="text-center">Entrar</h2>

        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" asp-for="Senha" placeholder="Senha" required="required">
        </div>
        <div class="form-group">
            <button id="btentrar" type="submit" class="btn btn-primary btn-block">Entrar</button>
        </div>
        <a href="" data-toggle="modal" data-target="#ExemploModalCentralizado">Esqueceu a senha?</a>
        <div id="loadin"></div>
        <div class="col-md-12 text-center clsErro" style="margin-top:15px;color:red;">
            @ViewData["erro"]
        </div>
    </form>
</div>
<!-- Modal -->
<div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModalCentralizado">Redefinir Senha</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="RecuperaSenhaProximo" asp-controller="Login">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="text" class="form-control" asp-for="Email">
                        <label asp-for="CPF"></label>
                        <input type="text" class="form-control" asp-for="CPF">
                    </div>
                    <button type="submit" class="btn btn-primary">Próximo</button>
                </form>
            </div>
        </div>
    </div>
</div>


<style type="text/css">

    .login-form {
        width: 340px;
        margin: auto;
        font-size: 15px;
    }

        .login-form form {
            margin-bottom: 100px;
            background-color: #FFFFFF;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }


    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>



@section Scripts {
    <script>
        $(() => {
            $("#btentrar").click(function () {
                $(this).hide();
                $(".clsReg").hide();
                $(".clsErro").hide();
                $("#loadin").html("<div class='alert alert-light text-center' role='alert'><img src='./img/loading.gif' /> Aguarde...</div>");
            });
        });
    </script>
}
